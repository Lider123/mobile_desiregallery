<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="192dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/colorSecondary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="4dp"
            android:src="@drawable/ic_person_black_100dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorBackground"
            app:civ_border_color="@color/colorOnSecondary"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorOnSecondary"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>