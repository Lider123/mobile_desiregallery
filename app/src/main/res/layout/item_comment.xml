<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="comment"
                type="com.example.desiregallery.models.Comment" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_comment_background"
            android:layout_marginTop="@dimen/item_comment_margin"
            android:layout_marginStart="@dimen/item_comment_margin"
            android:layout_marginEnd="@dimen/item_comment_margin"
            android:orientation="vertical">

        <TextView
                android:id="@+id/item_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnSurface"
                android:layout_margin="@dimen/item_comment_text_margin"
                android:gravity="start"
                tools:text="Comment text"/>

        <TextView
                android:id="@+id/item_comment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_comment_time_margin"
                android:gravity="end"
                android:textColor="@color/colorDatetime"
                tools:text="00:00, 00.00.0000"/>
    </LinearLayout>
</layout>