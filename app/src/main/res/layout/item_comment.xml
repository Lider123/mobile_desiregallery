<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_comment_background"
        android:layout_marginTop="@dimen/item_comment_margin"
        android:layout_marginLeft="@dimen/item_comment_margin"
        android:layout_marginRight="@dimen/item_comment_margin"
        android:padding="16dp">

    <TextView
            android:id="@+id/item_comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOnSurface"
            android:layout_alignParentTop="true"
            android:text="Comment text"/>

    <TextView
            android:id="@+id/item_comment_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_comment_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="8dp"
            android:text="1970-01-01 00:00:00"/>

</RelativeLayout>